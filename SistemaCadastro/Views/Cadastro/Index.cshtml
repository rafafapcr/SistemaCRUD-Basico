@model DocumentoModel
@{
    ViewData["Title"] = "Tela de Cadastro";
}

<div class="text-center">
    <h1 class="display-4">Cadastro de Documentos</h1>
</div>

<form class="row g-3" asp-controller="Cadastro" asp-action="Criar" method="post">
    <div class="col-md-6">
        <label for="codigo" class="form-label">Código</label>
        <input type="text" asp-for="Codigo" class="form-control" placeholder="Digite o código do documento.">
    </div>

    <div class="col-md-6">
        <label for="exampleInputPassword1" class="form-label">Data Planejada</label>
        <input type="date" asp-for="DataPlanejada" class="form-control">
    </div>

    <div class="col-12">
        <br />
        <label for="exampleInputPassword1" class="form-label">Título</label>
        <input type="text" asp-for="Titulo" class="form-control" placeholder="Digite o título do documento.">
        <br />
    </div>

    <div class="col-md-6">
        <label for="exampleInputPassword1" class="form-label">Valor</label>
        <input type="number" asp-for="Valor" class="form-control" placeholder="Digite o valor do documento.">

    </div>

    <div class="col-md-6">
        <label for="inputState" class="form-label">Revisão</label>
        <select class="select" asp-for="Revisao" multiple id="revisao">
            <option value="0">0</option>
            <option value="A">A</option>
            <option value="B">B</option>
            <option value="C">C</option>
            <option value="D">D</option>
            <option value="E">E</option>
            <option value="F">F</option>
            <option value="G">G</option>
        </select>
    </div>

    <button type="submit" class="btn btn-outline-success btn-block" >Cadastrar</button>

</form>




