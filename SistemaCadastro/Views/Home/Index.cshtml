@model List<DocumentoModel>
@{
    ViewData["Title"] = "Tela de Consulta";
}

<div class="text-center">
    <h1 class="display-4">Consulta de Documentos</h1>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Código</th>
                <th scope="col">Título</th>
                <th scope="col">Revisão</th>
                <th scope="col">Data Planejada</th>
                <th scope="col">Valor (R$)</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            @if (Model != null && Model.Any())
            {
                foreach (DocumentoModel documento in Model)
                {
                    <tr>
                        <th scope="row">@documento.Codigo</th>
                        <td>@documento.Titulo</td>
                        <td>@documento.Revisao</td>
                        <td>@documento.DataPlanejada</td>
                        <td>@documento.Valor</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-outline-primary" asp-route-id="@documento.Id" asp-controller="Home" asp-action="EditarDocumento">EDITAR</a>
                                <a role="button" class="btn btn-outline-danger">APAGAR</a>
                            </div>
                        </td>
                    </tr>

                }
            }
        </tbody>
    </table>
</div>
